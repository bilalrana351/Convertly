<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="1.0" prefWidth="1.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.convertlyapp.WelcomePageController">
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
   <children>
      <ProgressIndicator fx:id="progressIndicator" layoutX="0.48" layoutY="0.75" prefHeight="0.15" prefWidth="0.2" style="-fx-progress-color: #673AB7;" />
      <Button fx:id="startButton" layoutX="0.4" layoutY="0.75" prefHeight="0.1" prefWidth="0.2" style="-fx-background-color: #673AB7; -fx-text-fill: white;" text="Get Started" />
      <ImageView fx:id="startupImage" fitHeight="0.4" fitWidth="0.4" layoutX="0.3" layoutY="0.1" pickOnBounds="true">
         <image>
            <Image url="@logo.jpg" />
         </image>
      </ImageView>
   </children>
</AnchorPane>